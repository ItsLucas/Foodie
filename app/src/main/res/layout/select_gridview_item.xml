<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sgi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="猕猴桃"
        android:textColor="@color/black"
        android:textSize="17dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sgi_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="￥30"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgi_name" />

    <ImageButton
        android:id="@+id/sgi_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgi_price"
        tools:srcCompat="@drawable/guihua" />

    <ImageButton
        android:id="@+id/sgi_addcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="135dp"
        android:background="@color/colorTransparency"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sgi_pic"
        app:srcCompat="@drawable/ic_emptycart" />

</androidx.constraintlayout.widget.ConstraintLayout>